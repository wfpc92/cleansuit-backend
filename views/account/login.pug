extends ../layout

block content
  .page-header
    h3 Entrar
  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='email') Correo
      .col-sm-7
        input.form-control(type='email', name='email', id='email', placeholder='Correo', autofocus, required)
    .form-group
      label.col-sm-3.control-label(for='password') Contraseña
      .col-sm-7
        input.form-control(type='password', name='password', id='password', placeholder='Contraseña', required)
    .form-group
      .col-sm-offset-3.col-sm-7
        button.col-sm-3.btn.btn-primary(type='submit')
          i.fa.fa-user
          | Entrar
        a.btn.btn-link(href='/forgot') Olvidaste tu contraseña?
    .form-group
      .col-sm-offset-3.col-sm-7
        hr
    .form-group
      .col-sm-offset-3.col-sm-7
        a.btn.btn-block.btn-facebook.btn-social(href='/auth/facebook')
          i.fa.fa-facebook
          | Entrar con Facebook
        a.btn.btn-block.btn-google.btn-social(href='/auth/google')
          i.fa.fa-google-plus
          | Entrar con Google
