extends ../layout

block content
  .page-header
    h3 Información del Perfil

  form.form-horizontal(action='/account/profile', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    if user.profile.url_foto
      .form-group
        label.col-sm-3.control-label Foto
        .col-sm-4
          img(src=user.profile.url_foto, class='img-ratio profile')
    .form-group
      label.col-sm-3.control-label(for='correo') Correo
      .col-sm-7
        p.form-control-static= user.correo
    .form-group
      label.col-sm-3.control-label(for='nombre') Nombre
      .col-sm-7
        input.form-control(type='text', name='nombre', id='nombre', value=user.nombre)
    .form-group
      label.col-sm-3.control-label(for='direccion') Dirección
      .col-sm-7
        input.form-control(type='text', name='direccion', id='direccion', value=user.profile.direccion)
    .form-group
      label.col-sm-3.control-label(for='telefono') Teléfono
      .col-sm-7
        input.form-control(type='text', name='telefono', id='telefono', value=user.profile.telefono)
    .form-group
      .col-sm-offset-3.col-sm-4
        button.btn.btn.btn-primary(type='submit')
          i.fa.fa-pencil
          | Actualizar Perfil

  .page-header
    h3 Cambiar Contraseña

  form.form-horizontal(action='/account/password', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='password') Nueva Contraseña
      .col-sm-7
        input.form-control(type='password', name='password', id='password')
    .form-group
      label.col-sm-3.control-label(for='confirmPassword') Confirmar Contraseña
      .col-sm-7
        input.form-control(type='password', name='confirmPassword', id='confirmPassword')
    .form-group
      .col-sm-offset-3.col-sm-4
        button.btn.btn-primary(type='submit')
          i.fa.fa-lock
          | Cambiar Contraseña

  .page-header
    h3 Borrar Cuenta

  form.form-horizontal(action='/account/delete', method='POST')
    .form-group
      p.col-sm-offset-3.col-sm-4 Usted puede borrar su cuenta, pero tenga en cuenta que esta acción es irreversible.
      input(type='hidden', name='_csrf', value=_csrf)
      .col-sm-offset-3.col-sm-4
        button.btn.btn-danger(type='submit')
          i.fa.fa-trash
          | Borrar mi cuenta

  .page-header
    h3 Cuentas Enlazadas

  .form-horizontal
    .form-group
      .col-sm-offset-3.col-sm-4
        if user.google
          p: a.text-danger(href='/account/unlink/google') Desenlazar su cuenta de Google
        else
          p: a(href='/auth/google') Enlazar su cuenta de Google
      .col-sm-offset-3.col-sm-4
        if user.facebook
          p: a.text-danger(href='/account/unlink/facebook') Desenlazar su cuenta de Facebook
        else
          p: a(href='/auth/facebook') Enlazar su cuenta de Facebook
