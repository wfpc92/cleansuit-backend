extends layout

block content
  .page-header
    h3 Contacto

  h3 Si tienes alguna inquietud sobre CleanSuit no dejes de contactarnos

  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='name') TU NOMBRE
      .col-sm-8
        input.form-control(type='text', name='name', id='name', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='email') TU CORREO ELECTRÃ“NICO
      .col-sm-8
        input.form-control(type='text', name='email', id='email')
    .form-group
      label(class='col-sm-2 control-label', for='subject') ASUNTO
      .col-sm-8
        input.form-control(type='text', name='subject', id='subject')
    .form-group
      label(class='col-sm-2 control-label', for='message') MENSAJE
      .col-sm-8
        textarea.form-control(name='message', id='message', rows='7')
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          i.fa.fa-envelope
          | Enviar
